<?xml version="1.0"?>
<package format="2">
  <name>hw_device_mgr</name>
  <version>0.0.1</version>
  <description>EtherCAT and other hardware device management</description>
  <maintainer email="john@dovetail-automata.com">John Morris</maintainer>

  <license>BSD</license>

  <buildtool_depend>catkin</buildtool_depend>

  <build_depend>message_generation</build_depend>
  <build_depend>rospy</build_depend>
  <build_depend>hal_hw_interface</build_depend>

  <build_export_depend>rospy</build_export_depend>
  <build_export_depend>hal_hw_interface</build_export_depend>

  <exec_depend>hal_hw_interface</exec_depend>
  <exec_depend>message_runtime</exec_depend>
  <exec_depend>rospy</exec_depend>
  <!-- For `ethercat_utils` -->
  <exec_depend>python3-pyparsing</exec_depend>
  <exec_depend>python3-ruamel.yaml</exec_depend>
  <exec_depend>python3-rospkg</exec_depend>
  <exec_depend>rosgraph</exec_depend>
  <exec_depend>python-fysom</exec_depend>
  <exec_depend>python3-lxml</exec_depend>

  <test_depend>rostest</test_depend>
  <test_depend>ros_pytest</test_depend>
  <test_depend>python3-pytest-cov</test_depend>

</package>
